<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.HBox?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.shape.Circle?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Activities.GuideActivity" style="-fx-background-color: transparent;">

    <GridPane alignment="CENTER" vgap="20" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10"
              style="-fx-effect: dropshadow(gaussian, black, 10, 0, 0, 0); -fx-background-image: url('/Resources/Pictures/guide_background.png'); -fx-background-size: cover;">

        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints/>
            <RowConstraints vgrow="ALWAYS"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints prefHeight="20"/>
        </rowConstraints>

        <HBox onMousePressed="#mousePressed" onMouseDragged="#mouseDragged">
            <Separator HBox.hgrow="ALWAYS" visible="false"/>
            <JFXButton prefWidth="40" prefHeight="40" text="âœ–"
                       onAction="#closeWindow"
                       style="-fx-background-color: transparent; -fx-text-fill: white; -fx-shape: 'M255 0C114.75 0 0 114.75 0 255s114.75 255 255 255s255-114.75 255-255S395.25 0 255 0z';"/>
        </HBox>

        <HBox GridPane.rowIndex="2" spacing="5" alignment="CENTER">
            <Circle id="0" radius="8" style="-fx-fill: teal; -fx-cursor: hand;" onMousePressed="#transformContainer"/>
            <Circle id="-768" radius="8" style="-fx-fill: teal; -fx-cursor: hand;"
                    onMousePressed="#transformContainer"/>
            <Circle id="-1536" radius="8" style="-fx-fill: teal; -fx-cursor: hand;"
                    onMousePressed="#transformContainer"/>
        </HBox>
    </GridPane>

    <HBox AnchorPane.topAnchor="100" AnchorPane.bottomAnchor="100" alignment="CENTER" spacing="512" fx:id="container"
          style="-fx-font-family: 'Trebuchet MS';">
        <Separator prefWidth="0" visible="false"/>

        <VBox spacing="20" alignment="CENTER">
            <ImageView fitWidth="256" fitHeight="256" style="-fx-effect: dropshadow(gaussian, black, 5, 0, 0, 0);">
                <Image url="/Resources/Pictures/first_guide.png"/>
            </ImageView>
            <Label fx:id="firstTextLabel"
                   style="-fx-font-size: 24; -fx-wrap-text: true; -fx-text-alignment: center; -fx-font-weight: bold;"/>
            <Label fx:id="firstText"
                   style="-fx-font-size: 18; -fx-wrap-text: true; -fx-text-alignment: center; -fx-pref-width: 256;"/>
        </VBox>

        <VBox spacing="20" alignment="CENTER" opacity="0.0" scaleX="0.0" scaleY="0.0">
            <ImageView fitWidth="256" fitHeight="256" style="-fx-effect: dropshadow(gaussian, black, 5, 0, 0, 0);">
                <Image url="/Resources/Pictures/second_guide.png"/>
            </ImageView>
            <Label fx:id="secondTextLabel"
                   style="-fx-font-size: 24; -fx-wrap-text: true; -fx-text-alignment: center; -fx-font-weight: bold;"/>
            <Label fx:id="secondText"
                   style="-fx-font-size: 18; -fx-wrap-text: true; -fx-text-alignment: center; -fx-pref-width: 256;"/>
        </VBox>

        <VBox spacing="20" alignment="CENTER" opacity="0.0" scaleX="0.0" scaleY="0.0">
            <ImageView fitWidth="256" fitHeight="256" style="-fx-effect: dropshadow(gaussian, black, 5, 0, 0, 0);">
                <Image url="/Resources/Pictures/third_guide.png"/>
            </ImageView>
            <Label fx:id="thirdTextLabel"
                   style="-fx-font-size: 24; -fx-wrap-text: true; -fx-text-alignment: center; -fx-font-weight: bold;"/>
            <Label fx:id="thirdText"
                   style="-fx-font-size: 18; -fx-wrap-text: true; -fx-text-alignment: center; -fx-pref-width: 256;"/>
        </VBox>

        <Separator prefWidth="0" visible="false"/>
    </HBox>

</AnchorPane>